{
  "name": "cutwater-core",
  "version": "0.1.2",
  "description": "A library providing the functionality that we always seem to need in every Typescript/Javascript project.",
  "homepage": "https://github.com/CodificationOrg/cutwater-core",
  "bugs": "https://github.com/CodificationOrg/cutwater-core/issues",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "typings": "lib/esm/index.d.ts",
  "scripts": {
    "clean": "gulp clean",
    "validate": "yarn lint && yarn test && yarn format",
    "test": "gulp prepareTest &&  ts-node -P tsconfig.cjs.json node_modules/tape/bin/tape -r dotenv/config \"src/**/*.spec.ts\" | tap-xunit > ./test-results/tap/results.xml",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "docs": "typedoc --out ./lib/docs --excludePrivate --externalPattern **/lib/** --mode file --gitRevision master --name \"CutWater:Core API Documentation\"",
    "publish:docs": "yarn clean && yarn docs && gulp publishDocs",
    "build": "gulp clean && npm-run-all --parallel build:esm build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "release:before": "yarn validate && git add -A .",
    "release:after": "git push origin --tags",
    "release:dev": "yarn release:before && standard-version -a --prerelease beta && yarn release:after",
    "release:prod": "yarn release:before && standard-version -a && yarn release:after && yarn publish:docs",
    "release:dry": "yarn validate && standard-version -a --dry-run --prerelease beta"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:CodificationOrg/cutwater-core.git"
  },
  "keywords": [
    "common",
    "cutwater",
    "utilities",
    "support",
    "logging",
    "md5",
    "codification"
  ],
  "author": {
    "name": "William Weiss",
    "url": "https://github.com/wweiss"
  },
  "license": "Apache-2.0",
  "private": false,
  "dependencies": {
    "date-fns": "^1.29.0"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/node": "^8.0.16",
    "@types/tape": "^4.2.31",
    "del": "^3.0.0",
    "dotenv": "^6.0.0",
    "gulp": "^4.0.0",
    "gulp-gh-pages": "^0.5.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.0",
    "standard-version": "^4.4.0",
    "tap-xunit": "^2.3.0",
    "tape": "^4.8.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.14.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3"
  },
  "optionalDependencies": {
    "rxjs": "^6.3.2"
  }
}
